package image.hog_person_detector;

import image.hog_person_detector.constants.*;

actor inverseslidingwindow () uint(size=8) Gin ==> uint(size=8) Gout :

/* Constants */
	uint(size=8) imageHeight = FRAME_HEIGHT;

	uint(size=8) windowDimension = CELL_WIDTH;

	uint(size=8) imageWidth = FRAME_WIDTH;

	uint(size=16) bufferSize = imageWidth * imageHeight;

	/* Variables */
	uint(size=16) head := 0;

	uint(size=8) buffer [ bufferSize ];

	uint(size=8) y := 0;

	uint(size=8) x := 0;

	uint(size=8) xBase := 0;

	uint(size=8) yBase := 0;

	uint(size=8) out;

	read: action Gin:[ x ] ==>
	guard
		head < bufferSize
	do
		buffer[head] := x;
		head := head + 1;
	end

	transition: action ==>
	guard
		head = bufferSize
	do
		head := 0;
		x := 0;
		y := 0;
		xBase := 0;
	end

	write: action ==> Gout:[ out ]
	guard
		head < bufferSize
	do


		out := buffer[(y + yBase) * imageWidth + x + xBase];
		// for x to windowDimension

		// then y++

		// if y >= windowDimension
			// then xBase ++ windowDinsion
			// x == 0
			// y == 0
			//if xBse >= imageWidth
				// then yBase++
				// xbase == 0
		x := x + 1;
		if x >= windowDimension then
		x := 0;
		y := y + 1;
			if y >= windowDimension then
			xBase := xBase + windowDimension;
			x := 0;
			y := 0;
				if xBase >= imageWidth then
				yBase := yBase + windowDimension;
				xBase := 0;
				end
			end
		end
		head := head + 1;
	end

	reset: action ==>
	guard
		head >= bufferSize
	do
		head := 0;
	end

	schedule fsm read :
		read ( read ) --> read;
		read ( transition ) --> write;
		write ( write ) --> write;
		write ( reset ) --> read;
		end

end
